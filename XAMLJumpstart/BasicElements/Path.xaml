<Page x:Class="XAMLJumpstart.BasicElements.Path"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XAMLJumpstart.BasicElements"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Path">

    <Grid Background="White">
		<Path Stroke="Blue" StrokeThickness="5">
			<Path.Data>
				<!--<LineGeometry StartPoint="10,20" EndPoint="10,200"></LineGeometry>-->
				<!--<RectangleGeometry Rect="10,10,200,100"/>-->
				<PathGeometry>
					<PathFigureCollection>
						<PathFigure StartPoint="10,10">
							<PathFigure.Segments>
								<LineSegment Point="10,200"/>
								<ArcSegment Size="50,50" RotationAngle="90" Point="200,100"></ArcSegment>
							</PathFigure.Segments>
						</PathFigure>
					</PathFigureCollection>
				</PathGeometry>
			</Path.Data>
		</Path>
    </Grid>
</Page>
